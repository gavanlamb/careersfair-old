@model careersfair.Models.Form
@{
    ViewBag.Title = "Create form";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}   
@section stylesheet{
    @Styles.Render("~/Content/FormBuilder")
}      
@section scripts{
    @Scripts.Render("~/Bundles/JQueryValidation")
    @Scripts.Render("~/Bundles/FormBuilderTabs")
}

<div class="container" onload="init()">
    <div class="row">
        <ul class="list-inline text-center" id="navList">
            <li role="presentation"><a href="#name" aria-controls="name">1</a></li>
            <li role="presentation"><a href="#bactions" aria-controls="bactions">2</a></li>
            <li role="presentation"><a href="#builder" aria-controls="builder">3</a></li>
            <li role="presentation"><a href="#aactions" aria-controls="aactions">4</a></li>
        </ul>
    </div>

        <div class="row content" id="name">
            <h1>Name</h1>
            <div class="col-lg-12">
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name)
        }
            </div>
        </div>
        <div class="row content" id="bactions">
            <div class="col-lg-12">
            </div>
        </div>
        <div class="row content" id="builder">
            <div class="col-md-6">
                <div class="clearfix">
                    <hr>
                    <div id="build">
                        <form id="target" class="form-horizontal">
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <h2>Drag & Drop components</h2>
                <div class="clearfix"></div>
                <hr>
                <div class="tabbable">
                    <ul class="nav nav-tabs" id="formtabs">
                    </ul>
                    <form id="components" class="form-horizontal">
                        <fieldset>
                            <div class="tab-content">
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
        <div class="row content" id="aactions">
            <div class="col-lg-12">
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <button type="button" id="previous"><img src="~/Content/images/arrow-left.png" alt="previous"></button>
                <button type="button" id="next"><img src="~/Content/images/arrow-right.png" alt="Next"></button>
                <button type="button" id="finish" value="Create">finish</button>
            </div>
        </div>
    <script data-main="/Scripts/assets/js/main-built" src="~/Scripts/assets/js/lib/require.js?v=3"></script>
</div>
