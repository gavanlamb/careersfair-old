@model careersfair.Models.Form
@{
    ViewBag.Title = "Create form";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}          
@section scripts{
    @Scripts.Render("~/Bundles/JQueryValidation")
    <script src="~/Scripts/bootstrap-formbuilder-tabs.js" type="text/javascript"></script>
}
<div class="container" onload="init()">
    <div class="row">
        <ul class="list-inline text-center" id="navList">
            <li role="presentation"><a href="#name" aria-controls="name">1</a></li>
            <li role="presentation"><a href="#bactions" aria-controls="bactions">2</a></li>
            <li role="presentation"><a href="#builder" aria-controls="builder">3</a></li>
            <li role="presentation"><a href="#aactions" aria-controls="aactions">4</a></li>
        </ul>
    </div>
    @using (Html.BeginForm()) { 
        @Html.AntiForgeryToken()
        <div class="row content" id="name">
            <h1>Name</h1>
            <div class="col-lg-12">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="row content" id="bactions">
            <div class="col-lg-12">
                <!--Hidden fields-->
            </div>
        </div>
        <div class="row content" id="builder">
            <div class="col-lg-12">
                @Html.EditorFor(model => model.Structure, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Structure, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row content" id="aactions">
            <div class="col-lg-12">
                <!--Hidden fields-->
            </div>
        </div>
        <div class="row">
            <button type="button" id="previous">previous</button>
            <button type="button" id="next">next</button>
            <button type="button" id="finish" value="Create">finish</button>
        </div>
    }
</div>
